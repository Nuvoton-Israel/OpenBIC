/* disable peci0, pin use by i3c */
&peci0 {
	status = "disabled";
};

&i3c5 {
	bcr = <0x66>;
	dcr = <0xCC>;
	part-id = <0x1234>;
	vendor-def-id = <0x5607>;
	slave;
	secondary;
	status = "okay";
	i3c5_smq:i3c-slave-mqueue@21 {
		compatible = "i3c-slave-mqueue";
		reg = <0x21>;
		msg-size = <256>;
		num-of-msgs = <4>;
		mandatory-data-byte = <0xae>;
		label = "I3C_SMQ_5";
		status = "okay";
	};
};

&i3c4 {
	status = "okay";
	i2c-scl-hz = <100000>;
	i3c-scl-hz = <12500000>;
};

