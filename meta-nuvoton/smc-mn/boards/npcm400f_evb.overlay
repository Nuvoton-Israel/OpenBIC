/ {
	chosen {
		zephyr,legacy_console = &uart1;
	};
};

&uart1 {
	status = "okay";
	current-speed = <115200>;
	ext-loopback;
};

&twd0 {
       status = "okay";
};


&i2c1a {
	clock-frequency = <I2C_BITRATE_STANDARD>;
	status = "okay";
};

